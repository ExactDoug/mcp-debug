{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.standardbeagle/mcp-debug",
  "description": "Debug and develop MCP servers with hot-swapping, session recording, and playback testing",
  "repository": {
    "url": "https://github.com/standardbeagle/mcp-debug",
    "source": "github"
  },
  "version": "1.1.2",
  "packages": [
    {
      "registryType": "pypi",
      "name": "mcp-debug",
      "identifier": "mcp-debug",
      "version": "1.1.2",
      "runtimeHint": "uvx",
      "transport": {
        "type": "stdio"
      }
    },
    {
      "registryType": "npm",
      "name": "mcp-server-debug",
      "identifier": "mcp-server-debug",
      "version": "1.1.2",
      "runtimeHint": "npx",
      "transport": {
        "type": "stdio"
      }
    }
  ]
}
